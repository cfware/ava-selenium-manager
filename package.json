{
	"name": "@cfware/ava-selenium-manager",
	"version": "0.2.1",
	"description": "Selenium Manager for AVA",
	"main": "index.js",
	"scripts": {
		"release": "standard-version --sign",
		"test": "xo && nyc ava -v"
	},
	"engines": {
		"node": ">=8"
	},
	"author": "Corey Farrell",
	"license": "MIT",
	"files": [
		"*.js",
		"!test-artifact-dir.js"
	],
	"keywords": [
		"selenium",
		"ava"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cfware/ava-selenium-manager.git"
	},
	"bugs": {
		"url": "https://github.com/cfware/ava-selenium-manager/issues"
	},
	"homepage": "https://github.com/cfware/ava-selenium-manager#readme",
	"dependencies": {
		"ava": "^2.0.0",
		"istanbul-lib-coverage": "^2.0.5",
		"make-dir": "^3.0.0",
		"pngjs": "^3.4.0",
		"selenium-webdriver": "^4.0.0-alpha.1"
	},
	"devDependencies": {
		"@babel/core": "^7.4.3",
		"@cfware/eslint-config-browser": "^0.3.0",
		"babel-plugin-istanbul": "^5.1.4",
		"chromedriver": "^74.0.0",
		"fastify": "^2.3.0",
		"fastify-babel": "^1.2.0",
		"fastify-static": "^2.4.0",
		"geckodriver": "^1.16.2",
		"hasha": "^5.0.0",
		"nyc": "^14.1.0",
		"standard-version": "^6.0.1",
		"xo": "^0.24.0"
	},
	"nyc": {
		"check-coverage": true,
		"per-file": true,
		"lines": 100,
		"statements": 100,
		"functions": 100,
		"branches": 100,
		"all": true,
		"reporter": [
			"html",
			"text"
		],
		"exclude": [
			"coverage/*.js",
			"doit.js",
			"__tests__/*.js",
			"test-*.js",
			"test/*.js",
			"test/helpers/*.js"
		]
	},
	"xo": {
		"overrides": [
			{
				"files": [
					"test/fixtures/**"
				],
				"extends": "@cfware/eslint-config-browser"
			}
		]
	}
}
